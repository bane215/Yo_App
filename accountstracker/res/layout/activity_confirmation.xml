<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:weightSum="1"
     >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginRight="3dp"
        android:layout_weight=".2"
        android:background="@color/FireBrick"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_yo_bank2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/title_padding_left"
            android:text="Confirmation" 
            android:textSize="32sp"
            android:textStyle="italic"
            android:textColor="@color/WhiteSmoke" 
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight=".8"
        android:background="@color/DarkOrange"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1" >

       

        <TextView
            android:id="@+id/tview_fromAccn"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".16"
             android:background="@color/FireBrick"
            android:text="From Account : "
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tview_toacc"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".16"
             android:background="@color/FireBrick"
            android:text="To Account : "
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tview_date"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".16"
             android:background="@color/FireBrick"
            android:text="Date : "
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tview_transfamt"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".16"
             android:background="@color/FireBrick"
            android:text="Amount : "
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="22sp" />
        
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginRight="3dp"
        android:layout_weight=".16"
        android:weightSum="1"
        android:background="@color/DarkOrange"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/proceed"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:layout_weight=".5"
             android:background="@color/FireBrick"
            android:text="Proceed"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="22sp" />
    
        <Button
            android:id="@+id/cancel"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:layout_weight=".5"
             android:background="@color/FireBrick"
            android:text="Cancel"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="22sp" />
        
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>
